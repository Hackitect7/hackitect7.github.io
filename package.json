{
  "private": true,
  "scripts": {
    "lint:css": "stylelint \"**/*.css\"",
    "fix:css": "stylelint \"**/*.css\" --fix",
    "format": "prettier . --check",
    "format:fix": "prettier . --write"
  },
  "lint-staged": {
    "*.{css}": [
      "stylelint --fix"
    ],
    "*.{md,mdx,json,yml,yaml}": [
      "prettier --write"
    ]
  },
  "devDependencies": {
    "husky": "^9.1.6",
    "lint-staged": "^15.2.10",
    "prettier": "^3.6.2",
    "prettier-plugin-go-template": "^0.0.15",
    "stylelint": "^16.24.0",
    "stylelint-config-standard": "^39.0.0"
  }
}
